<div class ="user_page">
<div class ="user_header">
<h2>THIS IS THE LIST OF USERS</h2>
</div>
<ul class="user_list">
<% @users.each do |user| %>
    <li class="user_item">
   <div class="profile">
    <img src="<%= user.photo %>">
    </div>
    <div class="user_desc">
    <div class="user_name">
    <b><%= link_to user.name, user_path(user)%></b>
    </div>
    <div class="posts_number">
    Number of Posts: <%= user.posts_counter%>
    </div>
    </div>
    </li>
    <% end %>
</ul>
</div>
